$full
    bottom 0
    left 0
    position absolute
    right 0
    top 0

.landmark-annotator
    display flex
    flex-flow column nowrap
    font-family 'Roboto'
    font-size 16px
    line-height 100%
    height 100vh
    width 100%

    &__control-bar
        display flex
        justify-content center
        padding 1vmin

    &__scale-bar-container
        align-items center
        display flex
        margin-left 1vmin

    &__scale-bar
        align-items center
        align-self stretch
        background-color goldenrod
        display flex
        justify-content center
        margin-right 1vmin

    &__landmarks-and-image-container
        display flex
        flex 1 1 auto

    &__landmarks-container
        flex 0 0 20vw
        padding 10px

    &__landmarks-list
        display flex
        flex-flow column nowrap
        list-style none inside

        &-item
            animation landmark-item-enter 1 140ms ease-out
            display flex
            justify-content space-between
            padding 8px

    &__radio-text
        margin-right 1ex

    &__image-container
        background-color #BBB
        flex 1 1 auto
        position relative
        user-select none

    &__image
        @extend $full
        max-height 100%
        max-width 100%
        pointer-events none

    &__interactable-area
        @extend $full
        overflow hidden

    &__point-base
        position absolute

    &__point-dragging-handle
        cursor move
        height 44px
        left -22px
        position absolute
        top -22px
        width @height

    &__point
        background-color currentColor
        border-radius 50%
        height 1vmin
        min-height 5px
        min-width 5px
        transform translate(-50%, -50%)
        point-events none
        position absolute
        width 1vmin

        &:after
            animation ripple 1 ease-in-out 300ms 250ms
            border 2px solid currentColor
            border-radius 50%
            bottom 0
            content ""
            left 0
            opacity 0
            position absolute
            right 0
            top 0

    &__targetting-rule-from-left
    &__targetting-rule-from-right
    &__targetting-rule-from-top
    &__targetting-rule-from-bottom
        pointer-events none
        position absolute

        &:after
            background-color currentColor
            box-shadow 0px 0px 5px 0px currentColor
            content ""
            opacity 0
            position absolute
            transition transform 300ms

    &__targetting-rule-from-left
    &__targetting-rule-from-right
        height 2px
        top -1px

        &:after
            bottom 0
            top 0
            width 10%

    &__targetting-rule-from-left
        &:after
            animation target-from-left 1 250ms ease-in-out
            right 0

    &__targetting-rule-from-right
        &:after
            animation target-from-right 1 250ms ease-in-out
            left 0


    &__targetting-rule-from-top
    &__targetting-rule-from-bottom
        left -1px
        width 2px

        &:after
            height 10%
            left 0
            right 0

    &__targetting-rule-from-top
        &:after
            animation target-from-top 1 250ms ease-in-out
            bottom 0

    &__targetting-rule-from-bottom
        &:after
            animation target-from-bottom 1 250ms ease-in-out
            top 0

    &__points-data-container
        display flex
        flex 0 0 20vh
        flex-flow column nowrap
        overflow auto

    &__points-title
        font-size 20px
        font-weight bold
        line-height 1
        margin-bottom 1vmin
        padding 1vmin

    &__point-table
        display flex
        flex 1 0 auto
        flex-flow column nowrap

    &__point-table-head
        flex 0 0 auto
        width 100%

    &__point-table-body
        display flex
        flex 1 0 auto
        flex-flow column nowrap
        width 100%

    &__point-table-row
        display flex
        flex 1 0 0

    &__point-table-cell
        flex 1 1 0
        padding 2px 8px
        text-align center

        &--empty
            background-color #BBB

    &__button
        background-color white
        border 1px solid black
        display block
        font-size 18px
        transition background-color 200ms
        padding 6px

        &:hover
        &:focus
            background-color greenyellow
            cursor pointer

        &--activated
            &:after
                @extend $full
                animation glow 950ms infinite
                content ""

            &
            &:hover
            &:focus
                background-color goldenrod
                border-color transparent
                position relative

@keyframes landmark-item-enter
    from
        opacity 0
        transform translateX(-100px)

    to
        opacity 1
        transform translateX(0px)

@keyframes ripple
    from
        opacity 1
        transform scale(1)

    to
        opacity 0
        transform scale(5)

@keyframes target-from-left
    0%
        opacity 0
        transform translateX(900%)

    50%
        opacity 1

    100%
        opacity 0
        transform translateX(0%)

@keyframes target-from-right
    0%
        opacity 0
        transform translateX(-900%)

    50%
        opacity 1

    100%
        opacity 0
        transform translateX(0%)

@keyframes target-from-top
    0%
        opacity 0
        transform translateY(900%)

    50%
        opacity 1

    100%
        opacity 0
        transform translateY(0%)

@keyframes target-from-bottom
    0%
        opacity 0
        transform translateY(-900%)

    50%
        opacity 1

    100%
        opacity 0
        transform translateY(0%)

@keyframes glow
    0%
        box-shadow 0px 0px 3px 1px goldenrod

    50%
        box-shadow 0px 0px 7px 4px goldenrod

    100%
        box-shadow 0px 0px 3px 1px goldenrod