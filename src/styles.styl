.landmark-annotator
    display flex
    flex-flow column nowrap
    height 100vh
    width 100%

    &__image-container
        background-color #BBB
        flex 1 1 auto
        position relative

    &__image
        bottom 0
        left 0
        position absolute
        right 0
        top 0
        max-height 100%
        max-width 100%

    &__points
        flex 0 0 15vh